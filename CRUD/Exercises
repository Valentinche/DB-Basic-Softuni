SELECT * FROM Employees

--6 задача
  SELECT (FirstName + '.' + LastName +'@softuni.bg')AS 'Full Email Address' FROM Employees 
  SELECT CONCAT(FirstName, '.' ,LastName, '@softUni.bg')  AS [Full Email Address] FROM Employees 

  --7 задача
  SELECT DISTINCT Salary from Employees;

  --9 задача
  SELECT [FirstName],LastName,JobTitle 
  FROM Employees
  WHERE Salary  BETWEEN 20000 AND 30000

  --10 задача
  SELECT CONCAT (FirstName,' ', MiddleName + ' ',LastName) AS 'Full Name' FROM Employees
  WHERE Salary IN ('25000','14000','12500','23600')
  

  -- 11задача
  SELECT [FirstName],LastName
  FROM Employees
  WHERE ManagerID IS NULL


  --12 задача
  SELECT [FirstName],LastName, Salary FROM Employees
	WHERE Salary  >= 50000
	ORDER BY  Salary DESC

	--13 задача
SELECT TOP (5) [FirstName],LastName FROM Employees
	ORDER BY  Salary DESC

	--14 задача
	SELECT [FirstName],LastName, DepartmentID FROM Employees
	WHERE DepartmentID  != 4


	--15 задача
	SELECT * FROM Employees
	ORDER BY Salary DESC,FirstName ASC,LastName DESC, MiddleName ASC

	--16 задача
	CREATE VIEW V_EmployeesSalaries
	AS
	(SELECT [FirstName],LastName,Salary FROM Employees)
	SELECT * FROM V_EmployeesSalaries


	GO
	--17задача
	GO
	CREATE VIEW V_EmployeeNameJobTitle
	AS
	(SELECT CONCAT (FirstName,' ', ISNULL(MiddleName, ''), ' ',LastName) AS [Full Name] ,JobTitle
	FROM Employees)

	SELECT * FROM V_EmployeeNameJobTitle



	--18 задача
	SELECT DISTINCT JobTitle  FROM Employees

	--19задача
	SELECT TOP (10) * FROM Projects
	ORDER BY StartDate ASC,[Name] ASC

	--21 задача
	SELECT * FROM Employees
	UPDATE Employees
	SET Salary +=Salary *0.12
	WHERE DepartmentID IN (1,2,4,11)

